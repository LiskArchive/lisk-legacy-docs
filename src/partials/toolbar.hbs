<div class="toolbar" role="navigation">
{{> nav-toggle}}
  {{#with site.homeUrl}}
  <a href="{{relativize this}}" title="Home" class="home-link{{#if @root.page.home}} is-current{{/if}}"></a>
  {{/with}}
{{> breadcrumbs}}
{{> toc-toggle}}
  {{#if (and page.fileUri (not env.CI))}}
  <div class="edit-this-page"><i class="icofont-ui-edit"></i><a href="{{page.fileUri}}">Edit this Page</a></div>
  {{else if (and page.editUrl (or env.FORCE_SHOW_EDIT_PAGE_LINK (not page.origin.private)))}}
  <div class="edit-this-page"><i class="icofont-ui-edit"></i><a href="{{page.editUrl}}">Edit this Page</a></div>
  {{/if}}
</div>
